@inherits LayoutComponentBase

<PageTitle>AdopcionWeb</PageTitle>
<RadzenComponents />

<RadzenLayout>
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <RadzenSidebarToggle Click="@(() => sidebarExpanded = !sidebarExpanded)" />
            <RadzenLabel Text="AdopcionWeb" />
        </RadzenStack>
    </RadzenHeader>
    <RadzenSidebar Responsive="false" Style="width: max-content">
        <RadzenPanelMenu DisplayStyle="@(sidebarExpanded ? MenuItemDisplayStyle.IconAndText : MenuItemDisplayStyle.Icon)" ShowArrow="false">
            <RadzenPanelMenuItem Text="DashBoard" Icon="Dashboard" Path="/" />
            <RadzenPanelMenuItem Text="Personas" Icon="face">
                @* <RadzenPanelMenuItem Text="Crear" Icon="note_add" Path="/CrearPersona" /> *@
                <RadzenPanelMenuItem Text="Lista" Icon="class" Path="/Personas" />
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Mascotas" Icon="grade">
                @* <RadzenPanelMenuItem Text="Crear" Icon="note_add" Path="/CrearMascota" /> *@
                <RadzenPanelMenuItem Text="Lista" Icon="book" Path="/Mascotas" />
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Adopcion" Icon="assignment">
                @* <RadzenPanelMenuItem Text="Crear" Icon="note_add" Path="/CrearAdopcion" /> *@
                <RadzenPanelMenuItem Text="Lista" Icon="book" Path="/Adopciones" />
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Visitas" Icon="account_balance">
                @* <RadzenPanelMenuItem Text="Crear" Icon="note_add" Path="/CrearVisita" /> *@
                <RadzenPanelMenuItem Text="Programadas" Icon="book" Path="/VisitasProgramadas" />
                <RadzenPanelMenuItem Text="Realizadas" Icon="book" Path="/VisitasRealizadas" />
            </RadzenPanelMenuItem>
        </RadzenPanelMenu>
    </RadzenSidebar>
    <RadzenBody>
        <div class="rz-p-4">
            @Body
        </div>
    </RadzenBody>
    <RadzenFooter>
        Realizado por AdopcionesFelices - Copyright © @DateTime.Now.Year
    </RadzenFooter>
</RadzenLayout>

@code {
    bool sidebarExpanded = true;
}
